/**
 * Memory of 4K 16-bit registers.
 * If load is asserted, the value of the register selected by
 * address is set to in; Otherwise, the value does not change.
 * The value of the selected register is emitted by out.
 */
CHIP RAM4K {
    IN in[16], load, address[12];
    OUT out[16];

    PARTS:
        DMux8Way(in=load,sel=address[9..11],a=aload,b=bload,c=cload,d=dload,e=eload,f=fload,g=gload,h=hload);
        RAM512(in=in,load=aload,address=address[0..8],out=ao);
        RAM512(in=in,load=bload,address=address[0..8],out=bo);
        RAM512(in=in,load=cload,address=address[0..8],out=co);
        RAM512(in=in,load=dload,address=address[0..8],out=do);
        RAM512(in=in,load=eload,address=address[0..8],out=eo);
        RAM512(in=in,load=fload,address=address[0..8],out=fo);
        RAM512(in=in,load=gload,address=address[0..8],out=go);
        RAM512(in=in,load=hload,address=address[0..8],out=ho);
        Mux8Way16(a=ao,b=bo,c=co,d=do,e=eo,f=fo,g=go,h=ho,sel=address[9..11],out=out);
}